block content
  h3 #{result.Name} Details

  table.table.tab-content
    tr
        th Symbol:
        td #{result.Symbol}
    tr
        th Name:
        td #{result.Name}
    tr
        th Last Price:
        td $#{result.LastPrice}

  form(method='POST', action="/buy/#{result.Symbol}/#{result.Name}/#{result.LastPrice}")
    .form-group
      label Quantity:
      input(type="text", name='quantity', placeholder='quantity')
      button(type="submit" class="btn btn-default") Buy Stock

